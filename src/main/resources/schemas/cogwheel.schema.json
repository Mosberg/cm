{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Minecraft Model with Components (Cogwheel)",
  "type": "object",
  "properties": {
    "credit": { "type": "string" },
    "loader": { "type": "string" },
    "fabric:type": { "type": "string" },
    "parent": { "type": "string" },
    "textures": {
      "type": "object",
      "additionalProperties": { "type": "string" }
    },
    "components": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "from": {
            "type": "array",
            "items": { "type": "number" },
            "minItems": 3,
            "maxItems": 3
          },
          "to": {
            "type": "array",
            "items": { "type": "number" },
            "minItems": 3,
            "maxItems": 3
          },
          "rotation": {
            "type": "object",
            "properties": {
              "angle": { "type": "number" },
              "axis": { "type": "string" },
              "origin": {
                "type": "array",
                "items": { "type": "number" },
                "minItems": 3,
                "maxItems": 3
              }
            },
            "required": ["angle", "axis", "origin"]
          },
          "faces": {
            "type": "object",
            "properties": {
              "north": { "$ref": "#/definitions/face" },
              "east": { "$ref": "#/definitions/face" },
              "south": { "$ref": "#/definitions/face" },
              "west": { "$ref": "#/definitions/face" },
              "up": { "$ref": "#/definitions/face" },
              "down": { "$ref": "#/definitions/face" }
            },
            "additionalProperties": false
          }
        },
        "required": ["from", "to", "faces"]
      }
    }
  },
  "required": ["textures", "components"],
  "definitions": {
    "face": {
      "type": "object",
      "properties": {
        "uv": {
          "type": "array",
          "items": { "type": "number" },
          "minItems": 4,
          "maxItems": 4
        },
        "texture": { "type": "string" },
        "rotation": { "type": "integer" },
        "tintindex": { "type": "integer" }
      },
      "required": ["uv", "texture"],
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}
